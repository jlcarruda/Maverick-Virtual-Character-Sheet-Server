{
  "extends": "tslint:recommended",
  "rulesDirectory": ["./src"],
  "rules": {
      "max-line-length": {
          "options": [120]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "no-trailing-whitespace": false,
      "no-var-requires": false,
      "no-console": false
  },
  "jsRules": {
      "max-line-length": {
          "options": [120]
      }
  }
}
